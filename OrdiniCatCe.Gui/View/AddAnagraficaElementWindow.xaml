<Window x:Class="OrdiniCatCe.Gui.View.AddAnagraficaElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding AddAnagraficaViewModel, Source={StaticResource Locator}}"
        Title="AddAnagraficaElementWindow" Height="80" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Nome" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="255" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="Annulla" Command="{Binding AnnullaCommand}"/>
            <Button Content="Conferma" Command="{Binding ConfermaCommand}"/>
        </StackPanel>
    </Grid>
</Window>
