<Window x:Name="AddAnagraficaWindow" x:Class="OrdiniCatCe.Gui.View.AddAnagraficaElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding AddAnagraficaViewModel, Source={StaticResource Locator}}"
        Title="{Binding WindowTitle}" Height="98" Width="319" ResizeMode="NoResize">
    <Grid>
        <Grid.Resources>
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="3"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Nome" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" />
            <TextBox Margin="3" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="255" FontSize="16" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="Annulla" Command="{Binding AnnullaCommand}"/>
            <Button Content="Conferma" Command="{Binding ConfermaCommand}"/>
        </StackPanel>
    </Grid>
</Window>
