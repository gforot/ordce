<Window x:Class="OrdiniCatCe.Gui.View.AddPezzoInOrdineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aggiungi Pezzo" Height="146" Width="792" Style="{StaticResource wndStyle}"
        DataContext="{Binding AddPezzoInOrdineViewModel, Source={StaticResource Locator}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition  Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Codice" Grid.Row="0" Grid.Column="0" />
        <TextBox Text="{Binding Codice, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" />

        <TextBlock Text="Descrizione" Grid.Row="0" Grid.Column="2" />
        <TextBox Text="{Binding Descrizione, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="3" />

        <TextBlock Text="Prezzo Acquisto" Grid.Row="1" Grid.Column="0" />
        <TextBox Text="{Binding PrezzoAcquisto, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" />

        <TextBlock Text="Prezzo Vendita" Grid.Row="1" Grid.Column="2" />
        <TextBox Text="{Binding PrezzoVendita, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="3" />

        <TextBlock Text="Marca" Grid.Row="2" Grid.Column="0" />
        <ComboBox SelectedValue="{Binding Marca}" DisplayMemberPath="Nome" ItemsSource="{Binding Marche}" Grid.Row="2" Grid.Column="1" OpacityMask="Black" />
        <TextBlock Text="Fornitore" Grid.Row="2" Grid.Column="2" />
        <ComboBox SelectedValue="{Binding Fornitore}" DisplayMemberPath="Name" ItemsSource="{Binding Fornitori}" Grid.Row="2" Grid.Column="3" OpacityMask="Black" />

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4">
            <Button Content="Esci" Command="{Binding AnnullaCommand}"/>
            <Button Content="Inserisci" Command="{Binding ConfermaCommand}"/>
        </StackPanel>
    </Grid>
</Window>
