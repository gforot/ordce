<Window x:Class="OrdiniCatCe.Gui.View.AddPezzoInOrdineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behavior="clr-namespace:OrdiniCatCe.Gui.behavior"
        Title="Aggiungi Pezzo" Height="266" Width="837" Style="{StaticResource wndStyle}"
        DataContext="{Binding AddPezzoInOrdineViewModel, Source={StaticResource Locator}}">
    <Window.Resources>
        <Style x:Key="addMarcaFornitoreBtnStyle" TargetType="Button">
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!-- 3 Ordinato & Arrivato -->
            <RowDefinition Height="Auto" />
            <!-- 4 Avvisato & Ritirato -->
            <RowDefinition Height="Auto" />
            <!-- 5 Mancante -->
            <RowDefinition Height="Auto" />
            <!-- 6 Buttons -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Codice" Grid.Row="0" Grid.Column="0" />
        <TextBox Text="{Binding Codice, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" />
        <TextBlock Text="Descrizione" Grid.Row="0" Grid.Column="4" />
        <TextBox Text="{Binding Descrizione, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="3" />

        <TextBlock Text="Marca" Grid.Row="1" Grid.Column="0" />
        <Button Grid.Row="1" Grid.Column="1" Content="Crea Marca" Command="{Binding AddMarcaCommand}" Style="{StaticResource addMarcaFornitoreBtnStyle}" /> 
        <ComboBox SelectedValue="{Binding Marca}" DisplayMemberPath="Nome" ItemsSource="{Binding Marche}" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" OpacityMask="Black" />
        <TextBlock Text="Fornitore" Grid.Row="1" Grid.Column="4" />
        <Button Grid.Row="1" Grid.Column="5" Content="Crea Fornitore" Command="{Binding AddFornitoreCommand}" Style="{StaticResource addMarcaFornitoreBtnStyle}" />
        <ComboBox SelectedValue="{Binding Fornitore}" DisplayMemberPath="Name" ItemsSource="{Binding Fornitori}" Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2" OpacityMask="Black" />

        <TextBlock Text="Prezzo Acq." Grid.Row="2" Grid.Column="0" />
        <TextBox Text="{Binding PrezzoAcquisto}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" >
            <i:Interaction.Behaviors>
                <behavior:TextBoxInputBehavior InputMode="DecimalInput" />
            </i:Interaction.Behaviors>    
        </TextBox>
        <TextBlock Text="Prezzo Vend." Grid.Row="2" Grid.Column="4" />
        <TextBox Text="{Binding PrezzoVendita}" Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="3">
            <i:Interaction.Behaviors>
                <behavior:TextBoxInputBehavior InputMode="DecimalInput" />
            </i:Interaction.Behaviors>
        </TextBox>

        <TextBlock Text="Ordinato" Grid.Row="3" Grid.Column="0" />
        <CheckBox IsChecked="{Binding Ordinato}" Grid.Row="3" Grid.Column="1" />
        <DatePicker SelectedDate="{Binding DataOrdinato}"  Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" />
        <TextBlock Text="Arrivato" Grid.Row="3" Grid.Column="4" />
        <CheckBox IsChecked="{Binding Arrivato}"  Grid.Row="3" Grid.Column="5" />
        <DatePicker SelectedDate="{Binding DataArrivato}"  Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2" />

        <TextBlock Text="Avvisato" Grid.Row="4" Grid.Column="0" />
        <CheckBox IsChecked="{Binding Avvisato}"  Grid.Row="4" Grid.Column="1" />
        <DatePicker SelectedDate="{Binding DataAvvisato}"  Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" />
        <TextBlock Text="Ritirato" Grid.Row="4" Grid.Column="4" />
        <CheckBox IsChecked="{Binding Ritirato}"  Grid.Row="4" Grid.Column="5" />
        <DatePicker SelectedDate="{Binding DataRitirato}" Grid.Row="4" Grid.Column="6" Grid.ColumnSpan="2" />
        <TextBlock Text="Mancante" Grid.Row="5" Grid.Column="0" />
        <CheckBox IsChecked="{Binding Mancante}" Grid.Row="5" Grid.Column="1" />

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="8">
            <Button Style="{StaticResource 75ButtonsStyle}" Content="Esci" Command="{Binding AnnullaCommand}"/>
            <Button Style="{StaticResource 75ButtonsStyle}" Content="Inserisci" Command="{Binding ConfermaCommand}"/>
        </StackPanel>
    </Grid>
</Window>
