<Window x:Class="OrdiniCatCe.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="marcheTemplate">
                <StackPanel>
                    <TextBlock Text="{Binding Nome}"></TextBlock>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="ordineTemplate">
                <StackPanel>
                    <TextBlock Text="{Binding Cliente}"></TextBlock>
                    <TextBlock Text="{Binding Indirizzo}"></TextBlock>
                </StackPanel>
            </DataTemplate>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding Marches}" ItemTemplate="{StaticResource marcheTemplate}"></ListBox>
        <ListBox ItemsSource="{Binding RigheOrdine}" ItemTemplate="{StaticResource ordineTemplate}" Grid.Row="1"></ListBox>
    </Grid>
</Window>
