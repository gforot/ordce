<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Name="mancanteBackground" x:Key="mancanteBackground"></SolidColorBrush>
    
    <Style x:Key="addAnagraficaItemTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="addAnagraficaItemTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="anagraficaItemButton" TargetType="Button" BasedOn="{StaticResource 75ButtonsStyle}">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="Height" Value="30" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</ResourceDictionary>